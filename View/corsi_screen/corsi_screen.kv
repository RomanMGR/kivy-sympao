<Btn_corsi@MDRectangleFlatButton>
    disabled: True
    line_color: "red"
    md_bg_color: "blue"
    md_bg_color_disabled: colors['Gray']['500']
    size: (180, 180)

<CorsiScreenView>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            size_hint_y: 0.2
            title: "Тест Корси"
            left_action_items: [["arrow-left", lambda x: root.controller.back()]]
        MDRelativeLayout:
            size_hint: None, None
            size: 1000, 1200
            pos: 200, 200
            Btn_corsi:
                id: corsi_btn_1
                pos_hint:{'center_x': 0.15, 'center_y': 0.8}
                on_press: root.controller.corsi_press(1)
            Btn_corsi:
                id: corsi_btn_2
                pos_hint:{'center_x': 0.38, 'center_y': 0.72}
                on_press: root.controller.corsi_press(2)
            Btn_corsi:
                id: corsi_btn_3
                pos_hint:{'center_x': 0.65, 'center_y': 0.77}
                on_press: root.controller.corsi_press(3)
            Btn_corsi:
                id: corsi_btn_4
                pos_hint:{'center_x': 0.9, 'center_y': 0.7}
                on_press: root.controller.corsi_press(4)
            Btn_corsi:
                id: corsi_btn_5
                pos_hint:{'center_x': 0.2, 'center_y': 0.48}
                on_press: root.controller.corsi_press(5)
            Btn_corsi:
                id: corsi_btn_6
                pos_hint:{'center_x': 0.55, 'center_y': 0.42}
                on_press: root.controller.corsi_press(6)
            Btn_corsi:
                id: corsi_btn_7
                pos_hint:{'center_x': 0.85, 'center_y': 0.45}
                on_press: root.controller.corsi_press(7)
            Btn_corsi:
                id: corsi_btn_8
                pos_hint:{'center_x': 0.33, 'center_y': 0.23}
                on_press: root.controller.corsi_press(8)
            Btn_corsi:
                id: corsi_btn_9
                pos_hint:{'center_x': 0.75, 'center_y': 0.2}
                on_press: root.controller.corsi_press(9)
        MDBoxLayout:
            id: n_start
            orientation: 'vertical'
            MDLabel:
                id: corsi_step_btn
                text: " Длина последовательности        " + str(root.current_step) + "/9"
                font_style: "H6"
            MDFloatLayout:
                MDLabel:
                    text: ' Обратный порядок ответов'
                    font_style: "H6"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.65}
                MDCheckbox:
                    id: corsi_check_bnt
                    pos_hint: {'center_x': 0.87, 'center_y': 0.65}
                    size_hint: None, None
                    size: "72dp", "72dp"
                    on_active: root.controller.active_inversion()
            MDRectangleFlatButton:
                id: corsi_btn_start
                text: "Начать"
                size_hint_y: 1
                size_hint_x: 1
                on_press: root.controller.start_test()