#: import Window kivy.core.window.Window

<StartScreenView>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Поиск устройств"
            left_action_items: [["menu"]]
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size: (Window.width, Window.height)
            bar_width: 8
            bar_color: root.bar_color1
            bar_inactive_color: root.bar_inactive_color1
            MDGridLayout:
                id: devices_list
                adaptive_height: True
                cols: 1
                spacing: 8
        MDRaisedButton:
            id: bts
            text: "Обновить список устройств"
            font_size: "18 sp"
            text_color: "black"
            on_press: root.controller.scan()
            size_hint_y:None
            size_hint_x:1

